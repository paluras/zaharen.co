{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://my-project-n0jf.onrender.com/api/$1"
    },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; connect-src 'self' https://my-project-n0jf.onrender.com;"
        }
      ]
    }
  ]
}
